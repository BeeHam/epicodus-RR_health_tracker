<h1>Howdy <%= current_user.username %></h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= exer_sortable "exercise_name" %></th>
      <th><%= exer_sortable "calories_burned" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @exercises.each do |exercise| %>
    <tr>
      <td><%= exercise.exercise_name %></td>
      <td><%= exercise.calories_burned %></td>
        <td><%= link_to "Edit", edit_user_exercise_path(@user, exercise) %> |
        <%= link_to "Delete", user_exercise_path(@user, exercise), method: "Delete" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<hr>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= food_sortable "food_name" %></th>
      <th><%= food_sortable "calories" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
    <tr>
      <td><%= food.food_name %></td>
      <td><%= food.calories %></td>
        <td><%= link_to "Edit", edit_user_food_path(@user, food) %> |
        <%= link_to "Delete", user_food_path(@user, food), method: "Delete" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= link_to "Add an Exercise", new_user_exercise_path(current_user) %> |
<%= link_to "Add a Food", new_user_food_path(current_user) %>
